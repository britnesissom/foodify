<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/food_image"
        android:contentDescription="@string/content_description"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:clickable="true"/>

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:layout_toEndOf="@+id/food_image"
        android:layout_toRightOf="@+id/food_image"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="80dp"
        android:layout_toStartOf="@+id/fave_star_btn"
        android:layout_toLeftOf="@+id/fave_star_btn"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/fave_star_btn"
        android:contentDescription="Favorite star image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_star"
        android:clickable="true"/>

</RelativeLayout>